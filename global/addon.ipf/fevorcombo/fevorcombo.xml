        <richtext name="ex1" parent="exrecode" rect="0 0 280 20" margin="0 10 10 0" layout_gravity="right top" caption="" hittest="false" resizebytext="false" textalign="right center"/>
        <richtext name="ex2" parent="exrecode" rect="0 0 280 20" margin="0 30 10 0" layout_gravity="right top" caption="" hittest="false" resizebytext="false" textalign="right center"/>
        <richtext name="ex3" parent="exrecode" rect="0 0 280 20" margin="0 50 10 0" layout_gravity="right top" caption="" hittest="false" resizebytext="false" textalign="right center"/>
        <richtext name="ex4" parent="exrecode" rect="0 0 280 20" margin="0 70 10 0" layout_gravity="right top" caption="" hittest="false" resizebytext="false" textalign="right center"/>
        <timer name="addontimer" rect="0 0 10 10"/>
    </controls>
