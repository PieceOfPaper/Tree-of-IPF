<uitile name="fevorcombo" x="0" y="0" width="500" height="160" bodycolor="#ffff 0" bodyalpha="0">
    <frame fasthide="true" layout_gravity="center bottom" margin="0 0 0 110"/>
    <input maxwidth="1280" moveable="false" hittestframe="false"/>
    <layer layerlevel="10"/>
    <option closebutton="false"/>
    <effect open="fevorcomboOpen" close="fevorcomboClose"/>
    <script OpenScp="FEVORCOMBO_OPEN"/>
    <userconfig Color_0_9="FFFFFFFF" Color_10_29="FFFFFF00" Color_30_49="FFFFAA00" Color_50_99="FFFF6600" Color_100="FF00FF00" Ex_DigitFont="{@st45tw3}" Ex_XFont="{@st45tw3}" Ex_TextFont="{@st45tw3}"/>
    <controls>
        <gauge name="combo_gauge_right" rect="0 0 120 50" margin="0 85 0 0" layout_gravity="center top"/>
        <!--gauge name="combo_gauge_left" rect="-80 54 120 50" layout_gravity="center top"/-->
        <picture name="digit1" rect="0 0 40 60" margin="0 0 210 0" layout_gravity="right top" hittest="false" image="3" stretch="true"/>
        <picture name="digit2" rect="0 0 40 60" margin="0 0 330 0" layout_gravity="right top" hittest="false" image="1" stretch="true"/>
        <picture name="digit3" rect="0 0 40 60" margin="0 0 290 0" layout_gravity="right top" hittest="false" image="2" stretch="true"/>
        <picture name="text" rect="0 0 120 40" margin="0 10 160 0" layout_gravity="right top" hittest="false" image="combo" stretch="true"/>
        <picture name="time_deco" rect="0 0 80 60" margin="0 50 0 0" layout_gravity="center top" hittest="false" image="time_deco" stretch="true"/>
        <richtext name="curcombo" rect="0 0 100 20" margin="295 55 0 0" layout_gravity="left top" caption="" format="" hittest="false" param1="comboCnt" textalign="left center"/>
        <richtext name="expBonus" rect="0 0 100 20" margin="295 75 0 0" layout_gravity="left top" caption="{@st42}Exp + 1000" format="{@st42}Exp + %s%" hittest="false" param1="bonusexp" textalign="left center"/>
